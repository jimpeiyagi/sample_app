<li id="<%= feed_item.id %>">



  <span class="ride_on_flg" >
  <% @flg = feed_item.ride_on_flg %>
  <% if @flg == true %>
  <div class="noritai">
  <%= p '乗りたい!' %>
  </div>
  <% else %>
  <div class="nosetai">
  <%= p '乗せたい!' %>
  </div>
  <% end %>
  </span>
  <br>


      <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>

  <% if @user.image? %>
　<%= image_tag(@user.image.thumb.url , :class => "icon thumbnail")%>
　<% else %>
　　　<%= image_tag('http://f.st-hatena.com/images/fotolife/j/jimpeipei/20150617/20150617142712.gif?1434518841' , :class => "icon thumbnail") %>
　<% end %>


  <br>

  <span class="from"><%= feed_item.from %></span><%= image_tag src='http://f.st-hatena.com/images/fotolife/j/jimpeipei/20150616/20150616214942.jpg?1434458998', :size => '40x40' %><span class="to"><%= feed_item.to %></span>
  

    <span class="content"><%= feed_item.content %></span>
    <br>
        <span class="ridedate"><%= feed_item.ridedate %></span>出発<br>
    <span class="timestamp">

      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "削除", feed_item, method: :delete,
                                     data: { confirm: "本当によろしいですか?" },
                                     title: feed_item.content %>
  <% end %>
</li>