<li id="<%= nosetai_feed.id %>">



    <span class="user">
      <%= link_to nosetai_feed.user.name, nosetai_feed.user %>
    </span>


  <% if nosetai_feed.user.image? %>
　　<%= image_tag(nosetai_feed.user.image.thumb.url , :class => "icon")%>
　<% else %>
　　<%= image_tag('http://f.st-hatena.com/images/fotolife/j/jimpeipei/20150617/20150617142712.gif?1434518841' , :class => "icon thumnail") %>
　<% end %>




  <br>

  <span class="from"><%= nosetai_feed.from %></span><%= image_tag src='http://f.st-hatena.com/images/fotolife/j/jimpeipei/20150616/20150616214942.jpg?1434458998', :size => '40x40' %><span class="to"><%= nosetai_feed.to %></span>
  
    <span class="content"><%= nosetai_feed.content %></span>
    <br>
      <span class="ridedate"><%= nosetai_feed.ridedate %></span>出発</br>
    <span class="timestamp">
      Posted <%= time_ago_in_words(nosetai_feed.created_at) %> ago.
    </span>
  <% if current_user?(nosetai_feed.user) %>
    <%= link_to "削除", nosetai_feed, method: :delete,
                                     data: { confirm: "本当によろしいですか?" },
                                     title: nosetai_feed.content %>
  <% end %>
</li>