<% provide(:title, "Sign in") %>
<h1>ログイン</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :メールアドレス %>
      <%= f.text_field :email %>

      <%= f.label :パスワード %>
      <%= f.password_field :password %>

      <%= f.submit "サインイン", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>初めてですか？ <%= link_to "なら今すぐ登録しましょう！", signup_path %></p>
  </div>
</div>