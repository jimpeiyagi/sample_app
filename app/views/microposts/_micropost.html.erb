<li>
  <span class="ride_on_flg" >
  <% @flg = micropost.ride_on_flg %>
  <% if @flg == true %>
  <div class="noritai">
  <%= p '乗りたい!' %>
  </div>
  <% else %>
  <div class="nosetai">
  <%= p '乗せたい!' %>
  </div>
  <% end %>
  </span>
  <br>

  <span class="ridedsate"><%= micropost.ridedate %></span>に出発</br>
  <span class="from"><%= micropost.from %></span>から  <span class="to"><%= micropost.to %></span>まで
  
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>

  <% if current_user?(micropost.user) %>
    <%= link_to "削除", micropost, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: micropost.content %>
  <% end %>
</li>