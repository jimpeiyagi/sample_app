<% provide(:title, 'Sign up') %>
<h1>ユーザー登録</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :名前 %>
      <%= f.text_field :name %>

      <%= f.label :メールアドレス %>
      <%= f.text_field :email %>

      <%= f.label :パスワード %>
      <%= f.password_field :password %>

      <%= f.label :パスワードの確認, "パスワードの確認" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :プロフィール画像 %>
      <%= image_tag @user.image.thumb.url if @user.image? %>
　     <%= f.file_field :image %>
　     <%= f.hidden_field :image_cache %>

      <%= f.submit "アカウントを作成", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>